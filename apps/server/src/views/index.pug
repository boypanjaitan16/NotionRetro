extends layout

block content
  .flex.flex-col.items-center.justify-center.min-h-screen.bg-gray-50
    .bg-white.p-8.rounded.shadow-md.max-w-md.w-full
      h1.text-4xl.font-extrabold.text-center.mb-4.text-blue-700 NotionRetro
      p.text-center.text-gray-600.mb-6 Manage your collections and export your todo lists to Notion.
      .flex.flex-col.space-y-4
        a(href="/auth/login" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 text-center font-semibold") Login
        a(href="/auth/signup" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700 text-center font-semibold") Signup
