{
	"name": "notionretro",
	"version": "1.0.0",
	"description": "Notion integration app",
	"main": "index.js",
	"scripts": {
		"dev": "concurrently \"npm run watch:css\" \"nodemon --watch src --ext ts,pug --exec ts-node src/index.ts\"",
		"build": "npm run build:css && tsc",
		"start": "node dist/index.js",
		"lint": "biome check ./src",
		"lint:fix": "biome check --write ./src",
		"update-db": "node scripts/updateUserTable.js",
		"migrate": "node scripts/run-migrations.js",
		"migrate:create": "node scripts/create-migration.js",
		"build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css",
		"watch:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css --watch"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"axios": "^1.11.0",
		"bcrypt": "^6.0.0",
		"cookie-parser": "^1.4.7",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"mysql2": "^3.14.3",
		"pug": "^3.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/cookie-parser": "^1.4.9",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.3",
		"@types/node": "^24.2.1",
		"concurrently": "^9.2.0",
		"nodemon": "^3.1.10",
		"tailwindcss": "^3.4.17",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	}
}
